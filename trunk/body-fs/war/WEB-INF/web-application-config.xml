<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="persistenceManagerFactory" class="com.bodyfs.PMF" factory-method="get" />

	<bean id="openPersistenceManagerInView" class="org.springframework.orm.jdo.support.OpenPersistenceManagerInViewInterceptor">
		<property name="persistenceManagerFactory">
			<ref bean="persistenceManagerFactory" />
		</property>
	</bean>
	<bean id="cacheManager" class="net.sf.jsr107cache.CacheManager" factory-method="getInstance" scope="singleton" />
	<bean id="cacheFactory" factory-bean="cacheManager" factory-method="getCacheFactory" scope="singleton" />
	<bean id="datacache" factory-bean="cacheFactory" factory-method="createCache" scope="singleton" name="datacache">
		<constructor-arg value="#{ T(java.util.Collections).emptyMap() }" index="0" type="java.util.Map" />
	</bean>

	<!-- DAO beans -->
	<bean id="counterDAO" class="com.bodyfs.dao.impl.CounterDAO" scope="singleton" lazy-init="true" />
	<bean id="herbDAO" class="com.bodyfs.dao.impl.HerbDAO" scope="singleton" lazy-init="true">
		<property name="counterbDAO" ref="counterDAO" />
		<property name="cache" ref="datacache" />
	</bean>
	<bean id="loginDAO" class="com.bodyfs.dao.impl.LoginDAO" scope="singleton" lazy-init="true" />
	<bean id="MPIDao" class="com.bodyfs.dao.impl.MPIDao" scope="singleton" lazy-init="true" />
	<bean id="patientVisitDAO" class="com.bodyfs.dao.impl.PatientVisitDAO" scope="singleton" lazy-init="true" />
	<bean id="paymentDAO" class="com.bodyfs.dao.impl.PaymentDAO" scope="singleton" lazy-init="true">
		<property name="cache" ref="datacache" />
	</bean>
	<bean id="personDAO" class="com.bodyfs.dao.impl.PersonDAO" scope="singleton" lazy-init="true">
		<property name="cache" ref="datacache" />
		<property name="counterDAO" ref="counterDAO" />
	</bean>
</beans>
